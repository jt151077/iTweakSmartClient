<s:ViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
							xmlns:s="library://ns.adobe.com/flex/spark" firstView="views.TweakHashIpadClientHomeView" applicationDPI="160">
	<fx:Script>
		<![CDATA[
			import com.adobe.serialization.json.JSON;
			
			import mx.events.FlexEvent;
			public static const SERVER_HOST:String = "imediamac19.uio.no";
			public static const SERVICE_HOST:String = "http://imediamac19.uio.no:4568";
			
			public static function getUpdateUrlRequest(lid:String):URLRequest {
				var upurlRequest:URLRequest = new URLRequest(iTweakSmartClient.SERVICE_HOST+"/updateCountry/"+lid);
				upurlRequest.method = URLRequestMethod.PUT;
				upurlRequest.contentType = "application/json";
				
				var statusObject:Object = new Object();
				statusObject.stat = "reset";
				
				upurlRequest.data = com.adobe.serialization.json.JSON.encode(statusObject);
				
				return upurlRequest;
			}
		]]>
	</fx:Script>
	
